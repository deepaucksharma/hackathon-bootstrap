{
  "name": "@newrelic/message-queues-platform-v2",
  "version": "2.0.0",
  "description": "Enterprise message queue monitoring platform with clean architecture",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc && npm run build:assets",
    "build:assets": "cp -r config dist/ && cp -r docs dist/",
    "start": "node -r tsconfig-paths/register -r dotenv/config dist/main.js",
    "start:prod": "NODE_ENV=production node -r tsconfig-paths/register -r dotenv/config dist/main.js",
    "dev": "tsx --watch src/main.ts",
    "dev:debug": "tsx --watch --inspect src/main.ts",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "docs:generate": "typedoc src --out docs/api"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@types/commander": "^2.12.0",
    "ajv": "^8.12.0",
    "chalk": "^5.4.1",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "debug": "^4.3.4",
    "dotenv": "^16.5.0",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "fastify": "^4.24.3",
    "inversify": "^6.0.2",
    "lodash-es": "^4.17.21",
    "node-cron": "^3.0.3",
    "pino": "^8.16.2",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitest/coverage-v8": "^0.34.6",
    "ajv-cli": "^5.0.0",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.16.2",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "keywords": [
    "newrelic",
    "kafka",
    "monitoring",
    "message-queues",
    "observability",
    "clean-architecture"
  ],
  "author": "New Relic",
  "license": "MIT"
}
