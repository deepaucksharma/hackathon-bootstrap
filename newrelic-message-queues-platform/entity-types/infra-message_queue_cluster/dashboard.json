{
  "name": "Message Queue Cluster",
  "description": "Overview dashboard for message queue cluster entities",
  "pages": [
    {
      "name": "Overview",
      "description": "Cluster health and performance overview",
      "widgets": [
        {
          "title": "Cluster Health Score",
          "layout": {
            "column": 1,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "visualization": {
            "id": "viz.billboard"
          },
          "rawConfiguration": {
            "queries": [
              {
                "query": "SELECT latest(cluster.health.score) AS 'Health Score %' FROM MessageQueue WHERE entity.guid = {{ entity.guid }} SINCE 30 minutes ago"
              }
            ],
            "thresholds": [
              {
                "value": 90,
                "alertSeverity": "NOT_ALERTING"
              },
              {
                "value": 80,
                "alertSeverity": "WARNING"
              },
              {
                "value": 0,
                "alertSeverity": "CRITICAL"
              }
            ]
          }
        },
        {
          "title": "Total Throughput",
          "layout": {
            "column": 5,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "visualization": {
            "id": "viz.line"
          },
          "rawConfiguration": {
            "queries": [
              {
                "query": "SELECT sum(cluster.throughput.total) AS 'Throughput' FROM MessageQueue WHERE entity.guid = {{ entity.guid }} TIMESERIES SINCE 6 hours ago"
              }
            ],
            "yAxisLeft": {
              "zero": true
            }
          }
        },
        {
          "title": "Availability",
          "layout": {
            "column": 9,
            "row": 1,
            "width": 4,
            "height": 3
          },
          "visualization": {
            "id": "viz.billboard"
          },
          "rawConfiguration": {
            "queries": [
              {
                "query": "SELECT average(cluster.availability) AS 'Availability %' FROM MessageQueue WHERE entity.guid = {{ entity.guid }} SINCE 30 minutes ago"
              }
            ],
            "thresholds": [
              {
                "value": 99.9,
                "alertSeverity": "NOT_ALERTING"
              },
              {
                "value": 99,
                "alertSeverity": "WARNING"
              },
              {
                "value": 0,
                "alertSeverity": "CRITICAL"
              }
            ]
          }
        },
        {
          "title": "Cluster Resources",
          "layout": {
            "column": 1,
            "row": 4,
            "width": 6,
            "height": 3
          },
          "visualization": {
            "id": "viz.table"
          },
          "rawConfiguration": {
            "queries": [
              {
                "query": "SELECT latest(cluster.brokerCount) AS 'Brokers', latest(cluster.topicCount) AS 'Topics', latest(cluster.totalPartitions) AS 'Partitions', latest(cluster.underReplicatedPartitions) AS 'Under-Replicated' FROM MessageQueue WHERE entity.guid = {{ entity.guid }}"
              }
            ]
          }
        },
        {
          "title": "Broker Health Distribution",
          "layout": {
            "column": 7,
            "row": 4,
            "width": 6,
            "height": 3
          },
          "visualization": {
            "id": "viz.pie"
          },
          "rawConfiguration": {
            "queries": [
              {
                "query": "SELECT count(*) FROM MessageQueue WHERE entity.type = 'MESSAGE_QUEUE_BROKER' AND clusterName = {{ entity.name }} FACET CASES(WHERE broker.health.status = 'healthy' AS 'Healthy', WHERE broker.health.status = 'degraded' AS 'Degraded', WHERE broker.health.status = 'unhealthy' AS 'Unhealthy') SINCE 5 minutes ago"
              }
            ]
          }
        }
      ]
    }
  ]
}