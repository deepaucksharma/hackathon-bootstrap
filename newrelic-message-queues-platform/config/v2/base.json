{
  "platform": {
    "version": "2.0.0",
    "name": "newrelic-message-queues-platform",
    "defaultMode": "simulation"
  },
  "api": {
    "region": "us",
    "endpoints": {
      "events": "insights-collector.newrelic.com",
      "metrics": "metric-api.newrelic.com",
      "nerdgraph": "api.newrelic.com"
    }
  },
  "streaming": {
    "batchSize": 1000,
    "flushInterval": 30000,
    "maxRetries": 3,
    "retryDelay": 1000,
    "compression": true
  },
  "foundation": {
    "hooks": ["validation", "enrichment", "routing"],
    "aggregation": {
      "enabled": true,
      "window": 60000,
      "maxGroups": 1000
    },
    "transformation": {
      "maxDepth": 10,
      "strictMode": false
    }
  },
  "monitoring": {
    "metrics": {
      "enabled": true,
      "interval": 60000
    },
    "health": {
      "enabled": true,
      "endpoint": "/health",
      "port": 8080
    }
  }
}