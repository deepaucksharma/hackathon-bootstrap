{
  "weights": {
    "infrastructure": 70,
    "simulation": 30
  },
  "coordination": {
    "deduplication": true,
    "prioritization": "infrastructure",
    "mergeStrategy": "overlay",
    "conflictResolution": "infrastructure-wins"
  },
  "enrichment": {
    "enabled": true,
    "rules": [
      {
        "source": "infrastructure",
        "target": "simulation",
        "type": "topology",
        "action": "sync"
      },
      {
        "source": "simulation",
        "target": "infrastructure",
        "type": "anomalies",
        "action": "inject"
      }
    ]
  },
  "fallback": {
    "enabled": true,
    "mode": "simulation",
    "threshold": 0.5,
    "triggers": ["discovery-failure", "api-error", "timeout"]
  },
  "balancing": {
    "dynamic": true,
    "adjustmentInterval": 300000,
    "metrics": ["availability", "completeness", "accuracy"]
  }
}